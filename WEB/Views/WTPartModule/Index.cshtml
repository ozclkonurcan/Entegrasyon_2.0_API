@model WEB.Models.WTPartIntegrationIndexViewModel
@{
    ViewData["Title"] = "WTPart Entegrasyon Durumları";
}
<div class="container py-4">
    <h1 class="mb-4 text-center">WTPart Entegrasyon Durumları</h1>
    <div class="row justify-content-center">
        <!-- WTPart Released Kartı -->
        <div class="col-md-6 mb-4">
            <div class="card shadow">
                <div class="card-header bg-success text-white text-center py-3">
                    <h5 class="card-title mb-0">WTPart Released</h5>
                </div>
                <div class="card-body text-center">
                    <p class="mb-2 fs-5">
                        <strong>Gönderilmemiş:</strong>
                        <span id="releasedNotSentCount">@Model.ReleasedNotSentCount</span> görev
                    </p>
                    <p class="mb-0 fs-5">
                        <strong>Gönderilen:</strong>
                        <span id="releasedSentCount">@Model.ReleasedSentCount</span> görev
                    </p>
                </div>
                <div class="card-footer text-center bg-light">
                    <small class="text-muted">Veriler canlı güncelleniyor</small>
                </div>
            </div>
        </div>

        <!-- WTPart Cancelled Kartı -->
        <div class="col-md-6 mb-4">
            <div class="card shadow">
                <div class="card-header bg-danger text-white text-center py-3">
                    <h5 class="card-title mb-0">WTPart Cancelled</h5>
                </div>
                <div class="card-body text-center">
                    <p class="mb-2 fs-5">
                        <strong>Gönderilmemiş:</strong>
                        <span id="cancelledNotSentCount">@Model.CancelledNotSentCount</span> görev
                    </p>
                    <p class="mb-0 fs-5">
                        <strong>Gönderilen:</strong>
                        <span id="cancelledSentCount">@Model.CancelledSentCount</span> görev
                    </p>
                </div>
                <div class="card-footer text-center bg-light">
                    <small class="text-muted">Veriler canlı güncelleniyor</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Test amaçlı push bildirimi tetiklemek için bir buton -->
    <div class="text-center">
        <button id="pushUpdateBtn" class="btn btn-primary">Push Güncelleme Gönder</button>
    </div>
</div>

@section Scripts {
    <!-- SignalR istemci kütüphanesini dahil edin -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.0/signalr.min.js"></script>
    <script>
        // SignalR bağlantısını oluşturuyoruz
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/wTPartHub")
            .build();

        connection.start()
            .then(() => {
                console.log("SignalR bağlantısı başarılı.");
            })
            .catch(err => console.error("SignalR bağlantı hatası: ", err));

        // Sunucudan gelen güncelleme mesajını dinliyoruz
        connection.on("ReceiveWTPartUpdates", (releasedNotSentCount, releasedSentCount, cancelledNotSentCount, cancelledSentCount) => {
            console.log("Güncelleme alındı:", releasedNotSentCount, releasedSentCount, cancelledNotSentCount, cancelledSentCount);
            document.getElementById("releasedNotSentCount").textContent = releasedNotSentCount;
            document.getElementById("releasedSentCount").textContent = releasedSentCount;
            document.getElementById("cancelledNotSentCount").textContent = cancelledNotSentCount;
            document.getElementById("cancelledSentCount").textContent = cancelledSentCount;
        });

        // Test için: Push bildirimi tetikleyen butona tıklayınca, PushIntegrationSummary endpoint'ini çağırıyoruz.
        document.getElementById("pushUpdateBtn").addEventListener("click", () => {
            fetch('/WTPart/PushIntegrationSummary', { method: 'POST' })
                .then(response => response.text())
                .then(result => console.log(result))
                .catch(err => console.error(err));
        });
    </script>
}



