			(function () {
			  // Authentication cookie süresine göre refresh'ı tetikleyin; burada 55 dakika örneği kullanıldı.
			  const refreshTime = 55 * 60 * 1000; // 55 dakika (milisaniye cinsinden)

			  async function silentRefresh() {
				try {
				  const response = await fetch('/Auth/RefreshToken', {
					method: 'POST',
					credentials: 'include' // Çerez kutusunun gönderilmesi için
				  });

				  if (response.ok) {
					console.log('Token ve Authentication cookie yenileme başarılı');
				  } else {
					console.error('Token yenileme sırasında hata', response.status);
					window.location.href = '/Auth/Login';
				  }
				} catch (error) {
				  console.error('Token yenileme isteğinde hata:', error);
				}
			  }

			  setInterval(silentRefresh, refreshTime);
			})();
		</script>


